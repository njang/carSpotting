<div id="modalNewClient" class="modal fade" role="dialog">
  <div class="modal-dialog modal-md">
    <!-- Modal content-->
    <div class="modal-content">
      <div class="modal-header">
        <h4>New client form</h4>
      </div>
      <div class="modal-body">
        <form>
        	<div class="row">
            <div class="col col-2 offset-1">Name</div>
            <div class="col col-9">
          		<input type="text" name="name" required>
            </div>
        	</div>
        	<div class="row">
            <div class="col col-2 offset-1">Address</div>
            <div class="col col-9">
	        	  <input type="text" name="address" required>
            </div>
        	</div>
        	<div class="row">
            <div class="col col-2 offset-1">Phone</div>
            <div class="col col-9">
  	      	<input type="text" name="phone" required>
        	</div>
          <div>
            <div class="col col-2 offset-1">Turf type</div>
            <div class="col col-9">
              <select name="turfType">
                <option value="lala" default>--</option>
                <option value="St. Augustine">St.Augustine</option>
                <option value="Bermuda">Bermuda</option>
                <option value="Zoysia">Opel</option>
              </select>
              <input type="date" name="lastMowed">
            </div>
          </div>
        	<button type="submit" class="btn btn-success saveNewClient" data-dismiss="modal">Save</button>
          <button type="reset" class="btn btn-default" data-dismiss="modal">Cancel</button>
        </form>
      </div>
    </div>
  </div>
</div>